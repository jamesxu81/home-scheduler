// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Family {
  id        String   @id @default(cuid())
  code      String   @unique // Unique code that members can use to join
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members FamilyMember[]
  events  Event[]
}

model FamilyMember {
  id        String   @id @default(cuid())
  name      String
  age       Int?
  color     String
  familyId  String
  family    Family   @relation(fields: [familyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([familyId])
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        String
  time        String
  category    String // "school" | "activities" | "appointment" | "other"
  reminder    Boolean  @default(false)
  kidId       String   // References FamilyMember id
  familyId    String
  family      Family   @relation(fields: [familyId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([familyId])
  @@index([kidId])
}
